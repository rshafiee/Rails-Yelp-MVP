<div class="jumbotron">
  <h2 class="display-4">Create your restaurant</h2>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.button :submit, class:"btn btn-outline-dark" %>
  <% end %>

</div>
