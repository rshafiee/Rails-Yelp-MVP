<div class="jumbotron">
  <h2 class="display-4" style="color: #7e7eff"><%= @restaurant.name %>🍴</h2>
  <p class="lead">Address: <%= @restaurant.address %> </p>
  <p class="lead">Phone: <%= @restaurant.phone_number %> </p>
  <p class="lead" style="color:#e53964"><%= @restaurant.category %> </p>

  <hr class="my-4">
  <h5 style="color: #7e73ff"><strong> <%= link_to 'All Reviews', restaurant_review_path(@restaurant) %></strong></h5>
  <div>
    <% @restaurant.reviews.each do |review| %>
      <div class="ratings"> <span class="product-rating" style="color:#e53964"><%= review.rating %></span><span style="color:#e53964">/5</span>
          <p class="lead"><%= review.content %></p>
      </div>
      <% end %>
  </div>
</div>
<br>
<%= link_to 'Back to restaurants', restaurants_path, class:"btn btn-outline-dark" %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class:"btn btn-outline-dark" %>
