
<%= simple_form_for [ @restaurant, @review ] do |f| %>
<h2 class="my-4" style="color: #7e73ff"><%= @restaurant.name %></h2>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit a review", class: "btn btn-outline-dark" %>
  <%= link_to 'Back to restaurant', restaurant_path(@restaurant), class:"btn btn-outline-dark" %>
<% end %>
